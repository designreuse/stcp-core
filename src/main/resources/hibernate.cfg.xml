<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
    <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/stcpdb?zeroDateTimeBehavior=convertToNull</property>
    <property name="hibernate.connection.username">root</property>
    <mapping class="com.kmutt.stcp.entity.Subject"/>
    <mapping class="com.kmutt.stcp.entity.CoursePlan"/>
    <mapping class="com.kmutt.stcp.entity.User"/>
    <mapping class="com.kmutt.stcp.entity.Account"/>
    <mapping class="com.kmutt.stcp.entity.CourseLecture"/>
    <mapping class="com.kmutt.stcp.entity.Curriculum"/>
    <mapping class="com.kmutt.stcp.entity.CurriculumSubject"/>
    <mapping class="com.kmutt.stcp.entity.Course"/>
    <mapping class="com.kmutt.stcp.entity.Prerequisite"/>
    <mapping class="com.kmutt.stcp.entity.RoleUser"/>
  </session-factory>
</hibernate-configuration>
